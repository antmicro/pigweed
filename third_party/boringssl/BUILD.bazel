load("@pigweed//pw_build:compatibility.bzl", "incompatible_with_mcu")
load(
    "@pigweed//pw_build:pigweed.bzl",
    "pw_cc_test",
)
load("@boringssl//:gen/sources.bzl",
     "ssl_headers",
     "ssl_internal_headers",
     "ssl_sources",
     "crypto_headers",
     "crypto_internal_headers",
     "crypto_sources",
)

package(default_visibility = ["//visibility:public"])

cc_library(
    name = "sysdeps",
    hdrs = ["sysdeps/sys/socket.h"],
    copts = ["-Wno-unused-parameter"],
    includes = ["sysdeps"],
    target_compatible_with = incompatible_with_mcu(),
    deps = [
        "@pigweed//pw_assert",
    ],
)

pw_cc_test(
    name = "build_test",
    srcs = [
        "build_test.cc",
    ],
    deps = [
        ":sysdeps",
        "@pigweed//pw_bytes",
    ],
)

cc_library(
    name = "boringssl",
    srcs = crypto_sources + ssl_sources,
    hdrs = crypto_headers + ssl_headers + crypto_internal_headers + ssl_internal_headers,
    includes = [
        "include",
    ],
    defines = [
      # Enable virtual desctructor and compile-time check of pure virtual base class
      "BORINGSSL_ALLOW_CXX_RUNTIME",

      # Code size optimiaztion
      "OPENSSL_SMALL",

      # The ARM assembly code is only for cortex-A.
      "OPENSSL_NO_ASM",

      # socklen_t is not defined
      "OPENSSL_NO_SOCK",

      # Disable assert, which may additionally link in unwanted binaries via
      # argument evaluation.
      "NDEBUG",
      "OPENSSL_NO_THREADS_CORRUPT_MEMORY_AND_LEAK_SECRETS_IF_THREADED",
    ],
    copts = [
      "-Wno-unused-function",
      "-Wno-conversion",
      "-Wno-unused-parameter",
      "-Wno-char-subscripts",
      "-Wno-cast-qual",
      "-w",
      "-fpermissive",
      "-Wno-error",  # To get through the -Werror=permissive error
    ],
    deps = [
        "@pigweed//third_party/boringssl:sysdeps",
    ],
)
